#!/usr/bin/env bash

environment_id="ruby-1.9.3-p0@rvm-test-vagrant"

rvmrc_rvm_version="1.10.1" # 1.10.1 seams as a safe start
eval "$(echo ${rvm_version}.${rvmrc_rvm_version} | awk -F. '{print "[[ "$1*65536+$2*256+$3" -ge "$4*65536+$5*256+$6" ]]"}' )" || {
  echo "This .rvmrc file requires at least RVM ${rvmrc_rvm_version}, aborting loading."
  return 1
}

if [[ -d "${rvm_path:-$HOME/.rvm}/environments" &&
  -s "${rvm_path:-$HOME/.rvm}/environments/$environment_id" ]]
then
  \. "${rvm_path:-$HOME/.rvm}/environments/$environment_id"

  if [[ $- == *i* ]] # check for interactive shells
  then echo "Using: $(tput setaf 2)$GEM_HOME$(tput sgr0)"
  else echo "Using: $GEM_HOME"
  fi

  if [[ -s "${rvm_path:-$HOME/.rvm}/hooks/after_use" ]]
  then \. "${rvm_path:-$HOME/.rvm}/hooks/after_use"
  fi
else
  # If the environment file has not yet been created, use the RVM CLI to select.
  if ! rvm --create use  "$environment_id"
  then echo "Failed to create RVM environment '${environment_id}'." && return 1
  fi
fi

if [[ -s Gemfile ]] && {
  ! command -v bundle >/dev/null ||
  command -v bundle | grep "${rvm_path:-$HOME/.rvm}/bin/bundle" >/dev/null
}
then
  printf "%b" "The rubygem 'bundler' is not installed. Installing it now.\n"
  gem install bundler
fi
if [[ -s Gemfile ]] && command -v bundle >/dev/null
then bundle install | grep -Ev 'Using|Your bundle is complete'
fi
